{
  "type": "module",
  "scripts": {
    "cf:dev": "wrangler dev src/index.ts",
    "cf:deploy": "wrangler deploy --minify src/index.ts",
    "node:dev": "tsx --watch ./src/node-runner.ts",
    "vercel:build": "npx esbuild ./src/vercel-runner.ts --bundle --minify --outfile=./api/index.js --platform=node --format=esm && node addConfig.js ./api/index.js",
    "vercel:dev": "npx esbuild ./src/vercel-runner.ts --bundle --minify --outfile=./api/index.js --platform=node --format=esm && vercel dev --listen 0.0.0.0:5000"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "dotenv": "^16.4.5",
    "undici": "^6.18.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240403.0",
    "@types/node": "^20.12.12",
    "esbuild": "0.21.3",
    "lit-html": "^3.1.3",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "wrangler": "^3.47.0"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
